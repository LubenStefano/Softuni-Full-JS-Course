
    <section class="details-hero">
        <div class="container">
            <h2>Laptop Details</h2>
        </div>
    </section>

    <section class="details-content">
        <div class="container">
            <div class="product-details">
                <div class="product-image">
                    <img src="{{tech.image}}" alt="Laptop">
                </div>
                <div class="product-info">
                    <h3>Brand: {{tech.brand}}</h3>
                    <p><strong>Model:</strong> {{tech.model}}</p>
                    <p><strong>Hard Disk:</strong> {{tech.hardDisk}}</p>
                    <p><strong>Screen Size:</strong> {{tech.screenSize}}</p>
                    <p><strong>RAM:</strong>{{tech.ram}}</p>
                    <p><strong>Operating System:</strong> {{tech.operatingSystem}}</p>
                    <p><strong>CPU:</strong> {{tech.cpu}}</p>
                    <p><strong>GPU:</strong> {{tech.gpu}}</p>
                    <p><strong>Price:</strong> ${{tech.price}}</p>
                    <p><strong>Color:</strong> {{tech.color}}</p>
                    <p><strong>Weight:</strong> {{tech.weight}}</p>
                </div>
            </div>
            {{#if user}}
            <div class="product-actions">
                {{#if isOwner}}
                <button class="btn edit"><a href="/tech/{{tech._id}}/edit">Edit</a></button>
                <button class="btn delete"><a href="/tech/{{tech._id}}/delete">Delete</a></button>
                {{else}}
                {{#if isPreferred}}
                 <p class="prefer-message">You've already preferred this device</p>
                 {{else}}
                <button class="btn prefer"><a href="/tech/{{tech._id}}/prefer">Prefer</a></button>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>

